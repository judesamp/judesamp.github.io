---
title: Portfolio
---

<div class="portfolio_image">
  <div class="portfolio_image_row">
    <div class="text_holder">
      <h1 class="portfolio_title">Portfolio</h1>
    </div>
  </div>
</div>

<div class="main portfolio_main">
  <div class="content">

    <% data.projects.each do |project| %>
      <div class='project'>
        <div class='screenshot'>
          <a href='<%= project.url %>' target="_blank">
            <%= image_tag project.screenshot %>
          </a>
        </div>
        <div class='description'>
          <h3><%= link_to project.name, project.url, target: '_blank' %></h3>
          <% if project.source_link %>
            <div class='source-link'><a href='<%= project.source_link %>'><i class='icon-github'></i><%= project.source_link.gsub(/http(s?):\/\/github.com\//, '') %></a></div>
          <% end %>
          <% if project.url.present? %>
            <%= simple_format project.description %>
            <a href="<%= project.url %>" target= '_blank' >View App</a>
            <br />
            <br />
          <% else %>
            <%= simple_format project.description %>
            <a target= '_blank' href="<%= project.site_url %>">View Site</a>
            <br />
            <br />
          <% end %>
          <% if project.github.present? %>
            <a href="<%= project.github %>" target= '_blank'>View on GitHub</a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>